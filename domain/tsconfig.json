{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2019"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/*.test.*"
  ]
}
