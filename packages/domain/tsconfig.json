{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": [
      "es6",
      "esnext"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "../../node_modules",
    "./src/**/*.test.*"
  ]
}
