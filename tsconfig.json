{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "./web/dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react"
  },
  "include": [
    "./web/src/**/*",
    "./web/test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
